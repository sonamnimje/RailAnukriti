{
  "version": 2,
  "name": "rail-anukriti-frontend",
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://rail-backend.onrender.com/api/$1"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "build": {
    "env": {
      "CI": "true"
    }
  }
}


